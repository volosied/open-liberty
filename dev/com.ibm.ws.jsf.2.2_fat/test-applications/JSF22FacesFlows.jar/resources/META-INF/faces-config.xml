<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- For JAR packaging, the flow definition must be explicitly declared here -->
    <flow-definition id="simple-jar">
        <view id="simple-jar">
            <vdl-document>/simple-jar/simple-jar.xhtml</vdl-document>
        </view>
        <flow-return id="goIndex">
            <from-outcome>/JSF22Flows_index</from-outcome>
        </flow-return>
        <flow-return id="goReturn">
            <from-outcome>/JSF22Flows_return</from-outcome>
        </flow-return>
    </flow-definition>

</faces-config>
